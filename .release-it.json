{
    "git": {
        "commitMessage": "chore: release v${version}",
        "requireBranch": "main"
    },
    "github": {
        "release": true
    },
    "npm": {
        "publish": true,
        "skipChecks": true
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "preset": {
                "name": "conventionalcommits"
            }
        }
    }
}
